<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardview_dark_background"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    tools:ignore="PrivateResource">

    <RelativeLayout
        android:id="@+id/photo_picker_tool_bar_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/photo_picker_vp_container"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/photo_picker_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_back"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/photo_picker_tv_screen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/_16ssp"
            android:text="@string/app_name"
            android:layout_centerHorizontal="true"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/photo_picker_iv_take_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_16sdp"
            android:src="@drawable/ic_camera"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/photo_picker_vp_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/photo_picker_tool_bar_container"
        app:layout_constraintBottom_toTopOf="@id/photo_picker_tab_layout_folder"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/photo_picker_view_pager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                />

            <FrameLayout
                android:id="@+id/container_rv_chosen_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:visibility="gone"
                android:paddingTop="@dimen/_16sdp"
                android:paddingBottom="@dimen/_8sdp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/photo_picker_rv_chosen_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </FrameLayout>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16sdp"
            android:visibility="gone"
            android:src="@drawable/ic_next"
            app:layout_anchor="@id/photo_picker_view_pager"
            app:layout_anchorGravity="bottom|right|end"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/photo_picker_tab_layout_folder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        app:layout_constraintTop_toBottomOf="@id/photo_picker_vp_container"
        app:layout_constraintBottom_toTopOf="@id/photo_picker_adMob_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <FrameLayout
        android:id="@+id/photo_picker_adMob_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo_picker_tab_layout_folder"
        />

</androidx.constraintlayout.widget.ConstraintLayout>